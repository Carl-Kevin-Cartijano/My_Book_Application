<!-- res/drawable/heart_button_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:top="-10dp" android:right="-10dp" android:left="-10dp" android:bottom="-10dp">
        <shape android:shape="oval">
            <solid android:color="#FF0000" />
        </shape>
    </item>
    <item android:top="0dp" android:right="0dp" android:left="0dp" android:bottom="-20dp">
        <rotate
            android:fromDegrees="-45"
            android:pivotX="50%"
            android:pivotY="80%">
            <shape android:shape="rectangle">
                <solid android:color="#FF0000" />
            </shape>
        </rotate>
    </item>
    <item android:top="0dp" android:right="-20dp" android:left="0dp" android:bottom="0dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="80%">
            <shape android:shape="rectangle">
                <solid android:color="#FF0000" />
            </shape>
        </rotate>
    </item>
</layer-list>
